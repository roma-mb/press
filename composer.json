{
    "name": "roma-mb/press",
    "description": "An elegant markdown-powered blog for the Laravel framework",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "RomaMb\\Press\\": "src/",
            "Database\\Factories\\": "database/factories/"
        }
    },
    "authors": [
        {
            "name": "Rom√°rio Melo",
            "email": "romario.melo.barreiras@gmail.com"
        }
    ],
    "require-dev": {
        "orchestra/testbench": "^6.9",
        "friendsofphp/php-cs-fixer": "^3.39"
    },
    "autoload-dev": {
        "psr-4": {
            "RomaMb\\Press\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpunit": "./vendor/bin/phpunit",
        "cs-fixer": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes"
    },
    "require": {
        "erusev/parsedown": "^1.7",
        "laravel/legacy-factories": "^1.3"
    },
    "extra": {
        "laravel": {
            "providers": [
                "RomaMb\\Press\\PressBaseServiceProvider"
            ]
        }
    }
}
